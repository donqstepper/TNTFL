{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src"
	},
	"exclude": [
    "node_modules"
  ],
	"formatCodeOptions": {
		"indentSize": 2
	}
}
